<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Student Management</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
</head>
<body>
    <!-- Header -->
    <header class="bg-primary text-white text-center p-3">
        <h1>Student Management System</h1>
    </header>

    <!-- Menu Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/">Home</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Data" asp-controller="Home">Students</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="About" asp-controller="Home">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-action="Contact" asp-controller="Home">Contact Us</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" asp-action="Course" asp-controller="Home">
                            Course
                        </a>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-action="BCA" asp-controller="Home">BCA</a></li>
                            <li><a class="dropdown-item" asp-action="MCA" asp-controller="Home">MCA</a></li>
                            <li><a class="dropdown-item" asp-action="MBA" asp-controller="Home">MBA</a></li>
                        </ul>
                    </li>
                </ul>
                <!-- Add Login Button on the left -->
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a asp-action="Authenticate" asp-controller="Home">
                            <img src="~/Image/Login.png" alt="Login" style="width: 30px; height: 30px;" />
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="bg-dark text-white text-center p-3 mt-5">
        <p>&copy; 2024 Student Management System. All Rights Reserved.</p>
        <h3 style="align-content:center">Follow Us</h3>
        <img src="~/Image/LinkedIn.png" height="30" width="30"/>
        <img src="~/Image/Youtube.jpg" height="30" width="30" />
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
